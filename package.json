{
  "name": "@amandaghassaei/event-dispatcher",
  "version": "1.0.4",
  "description": "Parent class to support custom event listeners, written in TypeScript.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "keywords": [
    "event",
    "listener",
    "addEventListener",
    "removeEventListener",
    "dispatch"
  ],
  "scripts": {
    "build": "tsc && npm run docs && npm run make-coverage-badge",
    "test": " mocha 'test/**/*.ts'",
    "test-with-coverage": "c8 mocha 'test/**/*.ts'",
    "make-coverage-badge": "c8 --reporter=json-summary mocha 'test/**/*.ts' && coverage-badge-creator",
    "docs": "typedoc --options ./typedoc.json"
  },
  "author": "Amanda Ghassaei",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/amandaghassaei/event-dispatcher.git"
  },
  "files": [
    "dist",
    "src"
  ],
  "devDependencies": {
    "@types/chai": "^4.3.4",
    "@types/mocha": "^10.0.1",
    "c8": "^8.0.0",
    "chai": "^4.3.7",
    "coverage-badge-creator": "^1.0.17",
    "mocha": "^10.2.0",
    "ts-node": "^10.9.1",
    "typedoc": "^0.24.1",
    "typedoc-plugin-markdown": "^3.15.1",
    "typescript": "^5.0.4"
  }
}
